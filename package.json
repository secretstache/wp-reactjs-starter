{
    "name": "wp-reactjs-starter",
    "docker-hub-username": "matzeeable",
    "docker-ci-image-name": "ci-php-composer-node",
    "docker-ci-e2e-image-name": "cypress-dind",
    "db-snapshot": [
        "wp_posts",
        "wp_postmeta"
    ],
    "version": "1.1.0",
    "description": "WordPress Plugin Boilerplate using new web technologies.",
    "author": "Matthias GÃ¼nter <support@matthias-web.com>",
    "license": "MIT",
    "private": true,
    "homepage": "https://matthias-web.com",
    "apidoc": {
        "sampleUrl": "/wp-json"
    },
    "scripts": {
        "docker:start": "yarn docker-compose up --build -d && grunt copy-npmLibs && concurrently --raw \"yarn docker-compose logs -f -t --tail=10\" \"yarn --silent wp-wait && webpack --watch\" \"yarn --silent chokidar 'inc/**/*.php' -i 'inc/others/cachebuster*' -c 'yarn i18n:generate:backend' --silent\"",
        "docker:stop": "yarn docker-compose stop",
        "docker:rm": "yarn docker-compose down",
        "docker:purge": "yarn docker-compose down -v",
        "docker-compose": "COMPOSE_PATH_SEPARATOR=: COMPOSE_FILE=./docker/development/docker-compose.yml:./docker/development/docker-compose.local.yml COMPOSE_PROJECT_NAME=${npm_package_name} docker-compose",
        "docker-compose:name": "echo $(docker inspect -f '{{.Name}}' $(yarn --silent docker-compose --log-level ERROR ps -q ${DCOMPOSE_SERVICE_NAME}) | cut -c2-)",
        "docker-compose:name-wordpress": "DCOMPOSE_SERVICE_NAME=wordpress yarn --silent docker-compose:name",
        "wp-cli": "yarn --silent docker-compose$(test $CI && echo '-e2e' || echo ' --log-level ERROR') exec --user 33:33 -T wordpress /bin/bash -c",
        "wp-wait": "docker exec $(yarn --silent docker-compose:name-wordpress) bash -c 'while [[ \"$(curl --insecure -s -o /dev/null -w ''%{http_code}'' localhost/wp-json/wprjss/v1/plugin)\" != \"200\" ]]; do sleep 2; done'",
        "i18n:generate:backend": "wp i18n make-pot . languages/$(basename \"$(pwd)\").pot --ignore-domain --include=inc/,index.php",
        "i18n:generate:frontend": "wp i18n make-pot public/dev public/languages/$(basename \"$(pwd)\").pot --ignore-domain && rm -rf public/languages/json && wp i18n make-json public/languages public/languages/json --no-purge",
        "db:snapshot": "yarn --silent wp-cli \"wp db export - --tables=$(node -e 'console.log(require(`./package.json`)[`db-snapshot`].join(`,`))')\" >",
        "db:snapshot-import-on-startup": "yarn --silent db:snapshot docker/scripts/startup.sql",
        "db:snapshot-import": "yarn --silent wp-cli \"wp db import /scripts/startup.sql\"",
        "build:production": "NODE_ENV=production webpack",
        "build:development": "webpack",
        "build:webpack:done": "grunt cachebuster:public && yarn --silent i18n:generate:frontend",
        "lint": "tslint --project .",
        "version": "grunt postversion",
        "serve": "yarn --silent build:production && yarn --silent build:development && grunt copy-npmLibs && grunt public-cachebuster && grunt serve",
        "docs:php": "rm -rf docs/php docs/_php && vendor/bin/phpdoc run -d inc/ -f index.php -t docs/_php --template=vendor/nelson6e65/phpdoc-vuepress/data/templates/vuepress && mkdir -p docs/_php/.vuepress/ && cp build/vuepress-php.js docs/_php/.vuepress/config.js && vuepress build docs/_php && rm -rf docs/_php",
        "docs:js": "rm -rf docs/js && typedoc public/src",
        "docs:api": "rm -rf docs/api && apidoc -i inc -o docs/api",
        "docs:hooks": "rm -rf docs/hooks && jsdoc inc -c build/hookdoc.json",
        "docs": "yarn --silent docs:php && yarn --silent docs:js && yarn --silent docs:api && yarn --silent docs:hooks",
        "prettier:reformat": "prettier --write 'inc/**/*.php' '*.php' && prettier --write 'public/src/**/*.tsx'",
        "test": "yarn --silent test:cypress",
        "test:cypress": "cypress run",
        "docker-compose-e2e": "COMPOSE_PATH_SEPARATOR=: COMPOSE_FILE=./docker/development/docker-compose.yml:./docker/development/docker-compose.e2e.yml COMPOSE_PROJECT_NAME=${npm_package_name}-ci-${CI_COMMIT_REF_SLUG} docker-compose --log-level ERROR",
        "docker-compose-e2e-name": "echo $(docker inspect -f '{{.Name}}' $(yarn --silent docker-compose-e2e ps -q ${DCOMPOSE_SERVICE_NAME}) | cut -c2-)",
        "docker-compose-e2e-name-wordpress": "DCOMPOSE_SERVICE_NAME=wordpress yarn --silent docker-compose-e2e-name",
        "docker-compose-traefik": "COMPOSE_PATH_SEPARATOR=: COMPOSE_FILE=./docker/development/docker-compose.yml:./docker/development/docker-compose.traefik.yml COMPOSE_PROJECT_NAME=${npm_package_name}-traefik-${CI_COMMIT_REF_SLUG} docker-compose --log-level ERROR",
        "docker-compose-traefik-name": "echo $(docker inspect -f '{{.Name}}' $(yarn --silent docker-compose-traefik ps -q ${DCOMPOSE_SERVICE_NAME}) | cut -c2-)",
        "docker-compose-traefik-name-wordpress": "DCOMPOSE_SERVICE_NAME=wordpress yarn --silent docker-compose-traefik-name"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ],
        "rules": {
            "header-max-length": [
                2,
                "always",
                140
            ]
        }
    },
    "postcss": {
        "plugins": {
            "autoprefixer": {},
            "postcss-clean": {}
        }
    },
    "babel": {
        "sourceMaps": true,
        "presets": [
            "@babel/preset-env",
            "@babel/preset-typescript",
            "@babel/preset-react"
        ],
        "plugins": [
            [
                "@babel/plugin-transform-runtime",
                {
                    "helpers": false,
                    "regenerator": true
                }
            ],
            [
                "@babel/plugin-proposal-decorators",
                {
                    "legacy": true
                }
            ],
            [
                "@babel/plugin-proposal-class-properties",
                {
                    "loose": true
                }
            ]
        ]
    },
    "prettier": {
        "arrowParens": "always",
        "printWidth": 120,
        "useTabs": false,
        "tabWidth": 4,
        "endOfLine": "lf",
        "overrides": [
            {
                "files": "*.php",
                "options": {
                    "singleQuote": true,
                    "braceStyle": "1tbs"
                }
            }
        ]
    },
    "renovate": {
        "extends": [
            "config:semverAllMonthly"
        ],
        "packageRules": [
            {
                "packageNames": [
                    "mobx"
                ],
                "allowedVersions": "<5.0.0"
            }
        ]
    },
    "dependencies": {
        "@wordpress/i18n": "^3.5.0",
        "i18n-calypso": "^3.0.0",
        "jquery": "^3.4.1",
        "lodash": "^4.17.15",
        "mobx": "^4.9.4",
        "mobx-react": "^6.1.3",
        "mobx-state-tree": "^3.14.0",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "setimmediate": "^1.0.5",
        "url-parse": "^1.4.7"
    },
    "devDependencies": {
        "@babel/core": "^7.4.4",
        "@babel/plugin-proposal-class-properties": "^7.4.4",
        "@babel/plugin-proposal-decorators": "^7.4.4",
        "@babel/plugin-transform-runtime": "^7.4.4",
        "@babel/preset-env": "^7.4.4",
        "@babel/preset-react": "^7.0.0",
        "@babel/preset-typescript": "^7.3.3",
        "@babel/runtime": "^7.4.4",
        "@commitlint/cli": "^7.6.1",
        "@commitlint/config-conventional": "^7.6.0",
        "@prettier/plugin-php": "^0.10.2",
        "@semantic-release/changelog": "^3.0.4",
        "@semantic-release/exec": "^3.3.7",
        "@semantic-release/git": "^7.0.16",
        "@semantic-release/gitlab": "^4.0.0",
        "@types/classnames": "^2.2.7",
        "@types/jquery": "^3.3.29",
        "@types/react": "^16.8.17",
        "@types/react-dom": "^16.8.4",
        "@types/url-parse": "^1.4.3",
        "apidoc": "^0.17.7",
        "autoprefixer": "^9.5.1",
        "babel-loader": "^8.0.5",
        "chokidar-cli": "^1.2.2",
        "classnames": "^2.2.6",
        "concurrently": "^4.1.0",
        "css-loader": "^1.0.1",
        "cypress": "^3.3.1",
        "fork-ts-checker-webpack-plugin": "^1.5.0",
        "grunt": "^1.0.4",
        "grunt-cachebuster": "^0.1.7",
        "grunt-contrib-clean": "^2.0.0",
        "grunt-contrib-compress": "^1.5.0",
        "grunt-contrib-copy": "^1.0.0",
        "grunt-node-modules-cachebuster": "^0.1.0",
        "husky": "^2.2.0",
        "jsdoc": "^3.6.1",
        "mini-css-extract-plugin": "^0.4.5",
        "node-sass": "^4.12.0",
        "postcss-clean": "^1.1.0",
        "postcss-loader": "^3.0.0",
        "prettier": "^1.17.0",
        "pretty-quick": "^1.10.0",
        "sass-loader": "^7.1.0",
        "semantic-release": "^15.13.24",
        "tslint": "^5.16.0",
        "tslint-config-prettier": "^1.18.0",
        "tslint-react": "^4.0.0",
        "typedoc": "^0.14.2",
        "typescript": "^3.4.5",
        "vuepress": "^0.14.11",
        "wait-on": "^3.2.0",
        "webpack": "^4.31.0",
        "webpack-cli": "^3.3.2",
        "webpackbar": "^3.2.0",
        "wp-hookdoc": "^0.2.0"
    }
}
